<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FF8181"
    android:backgroundTint="#E3E7EA"
    tools:context=".inicioActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="311dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="295dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="377dp"
        android:text="Olá, você prefere..."
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btCadastrar"
        android:layout_width="199dp"
        android:layout_height="69dp"
        android:backgroundTint="#E9F76B38"
        android:onClick="stargatosActivity"
        android:text="CACHORROS"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.702" />

    <Button
        android:id="@+id/btEntra"
        android:layout_width="199dp"
        android:layout_height="69dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="378dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="284dp"
        android:background="#FFFFFF"
        android:backgroundTint="#E9F76B38"
        android:onClick="stargatosActivity"
        android:text="GATOS"
        android:textColor="#000000"
        android:textSize="24sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#9E6363" />

    <Button
        android:id="@+id/buttonCadastrarPet"
        android:layout_width="315dp"
        android:layout_height="68dp"
        android:background="#E9FF8181"
        android:backgroundTint="#E9FF8181"
        android:lineSpacingExtra="8sp"
        android:onClick="starcadastrarActivity"
        android:text="Cadastrar um pet para adoção"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="465dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/petmatch" />

</androidx.constraintlayout.widget.ConstraintLayout>